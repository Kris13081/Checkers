{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "rm -rf node_modules package-lock.json && npm ci && npm run build"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "npx serve -s build",
      "preDeployCommand": [
        "npm install -g serve"
      ],
      "sleepApplication": false,
      "multiRegionConfig": {
        "us-west2": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  