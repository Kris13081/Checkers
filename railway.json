{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
        "phases": {
          "install": {
            "cmds": [
              "corepack enable", 
              "npm install --legacy-peer-deps"
            ]
          },
          "build": {
            "cmds": ["npm run build"]
          }
        }
      }
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "npx serve -s build -l 8080",
      "preDeployCommand": ["npm install -g serve"],
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  