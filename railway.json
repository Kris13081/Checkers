{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npm ci && npm run build"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "npx serve -s build",
      "preDeployCommand": [
        "npm install -g serve"
      ],
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  